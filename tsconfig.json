{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config": ["src/configuration"],
      "@database/*": ["src/database/*"],
      "@lib/*": ["src/lib/*"],
      "@rest": ["src/rest"],
      "@rest/*": ["src/rest/*"],
    },
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
  },

  "include": [
    "src/**/*.ts",
  ],

  "exclude": [
    "dist",
    "node_modules",
    "test",
    ".vscode",
  ],
}